#! /bin/sh
options="-version -cc -cppflags -cflags -ldflags -cxx -cxxflags -libs"
if [ "$#" -eq 0 -o "$1" = '-h' -o "$1" = -help ]; then
  echo "usage: $0 OPT..."
  echo "  where OPT is one or more from the following list:"
  echo "$options" -all
  exit 1
fi
for arg in "$@"; do
  case  "$arg" in
    -version)
      echo "genometools 1.5.7 (Linux) "2015-09-12 23:35:37""
      ;;
    -cc)
      echo 'CC="cc"'
      ;;
    -cppflags)
      echo 'CPPFLAGS="-I\"/vagrant/dist/Linux_x86_64/gt-1.5.7-Linux_x86_64-64bit-barebone/include\" -fno-stack-protector -U_FORTIFY_SOURCE -D_GNU_SOURCE -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -DHAVE_MEMMOVE -D_LARGEFILE64_SOURCE=1 -DHAVE_HIDDEN -DLUA_DL_DLOPEN -DLUA_USE_MKSTEMP -DWITHOUT_CAIRO -DSQLITE_THREADSAFE=0 -DHAVE_SQLITE"'
      ;;
    -cflags)
      echo 'CFLAGS=""'
      ;;
    -cxx)
      echo 'CXX="g++"'
      ;;
    -cxxflags)
      echo 'CXXFLAGS=""'
      ;;
    -ldflags)
      echo 'LDFLAGS="-L/vagrant/dist/Linux_x86_64/gt-1.5.7-Linux_x86_64-64bit-barebone/lib  -L/usr/local/lib"'
      ;;
    -libs)
      echo 'LIBS=" -lm  -ldl -lpthread -ldl"'
      ;;
    -all)
      exec $0 $options
      ;;
    *)
      echo "Invalid argument: $arg"
      ;;
  esac
done